@model IEnumerable<Online_Grocery_Store.Models.Cart>
@{
    ViewBag.Title = "cartAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Customer cart page-->
<link href="~/Content/Dashboard.css" rel="stylesheet" />

<h1>cartAdd</h1>

@Html.ActionLink("Shop", "Order", "shopping", new { userId = ViewBag.UserID }, null)


@if (ViewBag.cartItemCount == "Zero")
{

    <h3>No Item in Your Cart</h3> <!--Message In case there are no items in the cart-->


}
else
{
    <!--Else block to show table containing cart table items -->
<div id="tale">
    <div class="form-group">
        <label for="myInput">Search</label>
        <input type="text" id="myInput" class="form-control">
    </div>
    <table class="container table" id="myTable">
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.productName</td>
                <td>@item.price</td>
                <td>@item.Quantity</td>
                <td>@item.totalPrice</td>
                <td>@Html.ActionLink("Remove From Cart", "deleteItem", "shopping", new { cartId = item.cartId, userId = ViewBag.UserID }, null)</td>


            </tr>


        }
    </table>
</div>
    <hr />

    <h3>Grand Total : @ViewBag.grandTotal</h3> <!--total price of the products in the customer cart-->
    <div><h3>@Html.ActionLink("Buy", "buy", "shopping", new { userID = ViewBag.UserID, total = ViewBag.grandTotal }, null)</h3></div>  <!--ActionLink to available products-->








}

<!--Jquery Script to filter the table -->

@section scripts{



    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>






}

