@model Online_Grocery_Store.Models.userData
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--  Customer Login Page   -->


<script src="~/Scripts/jquery-3.4.1.min.js"></script>  <!--  client side validation jquery script-->
<script src="~/Scripts/jquery.validate.min.js"></script>

<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<link href="~/Content/Login.css" rel="stylesheet" />





<body>
    <div id="login">
        <h3 class="text-center text-white pt-5">Login form</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">


                        <div class="text-danger">@ViewBag.email</div> <!--Error message In case email address is wrong-->
                        <div class="text-danger">@ViewBag.password</div>   <!--Error In case password is wrong -->
                        @using (Html.BeginForm("Login", "user", FormMethod.Post, new { id = "login-form" }))
                        {
                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                                @Html.LabelFor(c => c.email, new { @class = "text-info" })
                                @Html.TextBoxFor(c => c.email, new { @class = "form-control", id = "email" })
                                @Html.ValidationMessageFor(c => c.email, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(c => c.password, new { @class = "text-info" })
                                @Html.PasswordFor(c => c.password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(c => c.password, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <button type="submit" id="store" class="btn btn-primary">Login</button>
                            </div>
                            <div @*id="register-link" class="text-right"*@>
                                <p><b>Don't have a account @Html.ActionLink("SignUp", "SignUp", "user")</b></p> <!--ActionLink to Signup Page-->
                            </div>



                        }



                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


<!--javascript for adding customer login details in local storage-->

@section scripts{


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

    <script>
        $("#store").click(function () {

            //var val = document.getElementById("email").nodeValue;


            localStorage.setItem("id", $("#email").val());





        });


    </script>
    <script>

        $("#logId").hide();
    </script>

    }

